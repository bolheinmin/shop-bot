<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Products</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 </head>

  <body>
  <h1>All Products</h1>
  <p><a href="../../admin/addproduct">Add Product</a></p>


  <table cellspacing="1" cellpadding="5" border="1">
    <tr>
    <th>Image</th>
    <th>SKU</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
   
    <th>Action</th>    
  </tr>


  <% data.forEach(function(product){ %>
     <tr>
      
       <td><img src="<%= product.image %>" width="100"/></td>
       <td><%= product.sku %></td>
       <td><%= product.name %></td>
       <td><%= product.description %></td>
       <td><%= product.price %></td>
     
       
       <td><a href="#">Edit</a> | <a href="#">Delete</a></td>
     </tr>
  <% }); %>

	</table>
  

  

 
  
  
  </body>

</html>