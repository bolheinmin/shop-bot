    <label for="sku">SKU</label><br>
    <input type="text" name="sku"/><br> 

    <div class="form-group">
    <label for="file">Image</label>
    <input type="file" name="file" />
    </div> 

  

    
    <input type="submit" name="submit"/>

  </form>

 
  
  
  </body>

